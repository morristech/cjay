<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_container_list"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/feed_item_picture"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:scaleType="centerCrop"
        android:contentDescription="@string/container_id" />
    
    <LinearLayout
        android:id="@+id/feed_item_descriptions"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="horizontal">
	        <TextView
		        android:layout_width="0dp"
		        android:layout_height="fill_parent"
	        	android:layout_weight="1"
		        android:text="@string/container_id"
		        android:textStyle="bold" />
	        <TextView
		        android:id="@+id/feed_item_container_id"
		        android:layout_width="0dp"
		        android:layout_height="fill_parent"
	        	android:layout_weight="1"
		        android:gravity="right"
		        android:textColor="@color/blue_light"
		        android:maxLines="1"
		        android:ellipsize="end"
		        android:textStyle="bold" />
        </LinearLayout>
        
        <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="horizontal">
	        <TextView
		        android:layout_width="0dp"
		        android:layout_height="fill_parent"
	        	android:layout_weight="1"
		        android:text="@string/container_owner"
		        android:textStyle="bold" />
	        <TextView
		        android:id="@+id/feed_item_container_owner"
		        android:layout_width="0dp"
		        android:layout_height="fill_parent"
	        	android:layout_weight="1"
		        android:gravity="right"
		        android:textColor="@color/blue_light"
		        android:maxLines="1"
		        android:ellipsize="end"
		        android:textStyle="bold" />
        </LinearLayout>
        
        <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="horizontal">
	        <TextView
		        android:layout_width="0dp"
		        android:layout_height="fill_parent"
	        	android:layout_weight="1"
		        android:text="@string/container_import_date"
		        android:textStyle="bold" />
	        <TextView
		        android:id="@+id/feed_item_container_import_date"
		        android:layout_width="0dp"
		        android:layout_height="fill_parent"
	        	android:layout_weight="1"
		        android:gravity="right"
		        android:textColor="@color/blue_light"
		        android:maxLines="1"
		        android:ellipsize="end"
		        android:textStyle="bold" />
        </LinearLayout>
        
        <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="horizontal">
	        <TextView
		        android:layout_width="0dp"
		        android:layout_height="fill_parent"
	        	android:layout_weight="1"
		        android:text="@string/container_export_date"
		        android:textStyle="bold" />
	        <TextView
		        android:id="@+id/feed_item_container_export_date"
		        android:layout_width="0dp"
		        android:layout_height="fill_parent"
	        	android:layout_weight="1"
		        android:gravity="right"
		        android:textColor="@color/blue_light"
		        android:maxLines="1"
		        android:ellipsize="end"
		        android:textStyle="bold" />
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>