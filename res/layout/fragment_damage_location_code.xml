<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
	    android:gravity="center_horizontal" 
	    android:paddingLeft="30dp"
	    android:paddingRight="30dp"
	    android:paddingTop="10dp"
	    android:paddingBottom="10dp" >
		
	    <EditText
	        android:id="@+id/location_code_1" 
			style="@style/DamageReportLocationCodeEditText" />
	    <EditText
	        android:id="@+id/location_code_2"
			style="@style/DamageReportLocationCodeEditText" />
	    <EditText
	        android:id="@+id/location_code_3"
			style="@style/DamageReportLocationCodeEditText" />
	    <EditText
	        android:id="@+id/location_code_4"
			style="@style/DamageReportLocationCodeEditText" />
	</LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
	    android:gravity="center_horizontal" 
	    android:paddingLeft="20dp"
	    android:paddingRight="20dp"
	    android:paddingTop="2dp"
	    android:paddingBottom="2dp" >
		
	    <Button
	        android:id="@+id/btn_code_0"
			style="@style/DamageReportLocationCodeButton" />
	    <Button
	        android:id="@+id/btn_code_1"
			style="@style/DamageReportLocationCodeButton" />
	    <Button
	        android:id="@+id/btn_code_2"
			style="@style/DamageReportLocationCodeButton" />
	    <Button
	        android:id="@+id/btn_code_3"
			style="@style/DamageReportLocationCodeButton" />
	    <Button
	        android:id="@+id/btn_code_4"
			style="@style/DamageReportLocationCodeButton" />
	    <Button
	        android:id="@+id/btn_code_5"
			style="@style/DamageReportLocationCodeButton" />
	</LinearLayout>
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
	    android:gravity="center_horizontal" 
	    android:paddingLeft="20dp"
	    android:paddingRight="20dp"
	    android:paddingTop="2dp"
	    android:paddingBottom="2dp" >
		
	    <Button
	        android:id="@+id/btn_code_6"
			style="@style/DamageReportLocationCodeButton" />
	    <Button
	        android:id="@+id/btn_code_7"
			style="@style/DamageReportLocationCodeButton" />
	    <Button
	        android:id="@+id/btn_code_8"
			style="@style/DamageReportLocationCodeButton" />
	    <Button
	        android:id="@+id/btn_code_9"
			style="@style/DamageReportLocationCodeButton" />
	    <Button
	        android:id="@+id/btn_code_10"
			style="@style/DamageReportLocationCodeButton" />
	    <Button
	        android:id="@+id/btn_code_11"
			style="@style/DamageReportLocationCodeButton" />
	</LinearLayout>
    
</LinearLayout>
