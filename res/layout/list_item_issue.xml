<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_container_list"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:padding="1dp" >

        <ImageView
            android:id="@+id/issue_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/container_id"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_app" />

        <ImageView
            android:id="@+id/issue_warning"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:src="@drawable/ic_warning"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/feed_item_descriptions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:padding="3dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                style="@style/ListItemIssueLabel"
                android:text="@string/issue_location_code" />

            <TextView
                android:id="@+id/issue_location_code"
                style="@style/ListItemIssueValue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                style="@style/ListItemIssueLabel"
                android:text="@string/issue_damage_code" />

            <TextView
                android:id="@+id/issue_damage_code"
                style="@style/ListItemIssueValue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                style="@style/ListItemIssueLabel"
                android:text="@string/issue_repair_code" />

            <TextView
                android:id="@+id/issue_repair_code"
                style="@style/ListItemIssueValue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                style="@style/ListItemIssueLabel"
                android:text="@string/issue_component_code" />

            <TextView
                android:id="@+id/issue_component_code"
                style="@style/ListItemIssueValue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                style="@style/ListItemIssueLabel"
                android:layout_weight="1.5"
                android:text="@string/issue_length" />

            <TextView
                android:id="@+id/issue_length"
                style="@style/ListItemIssueValue"
                android:layout_weight="1.5" />

            <TextView
                style="@style/ListItemIssueLabel"
                android:layout_weight="1" />

            <TextView
                style="@style/ListItemIssueLabel"
                android:layout_weight="1.5"
                android:text="@string/issue_height" />

            <TextView
                android:id="@+id/issue_height"
                style="@style/ListItemIssueValue"
                android:layout_weight="1.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                style="@style/ListItemIssueLabel"
                android:text="@string/issue_quantity" />

            <TextView
                android:id="@+id/issue_quantity"
                style="@style/ListItemIssueValue" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>