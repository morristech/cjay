<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.cloudjay.cjay"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_container_list"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="3dp" >

    <com.cloudjay.cjay.view.SquareImageView
        android:id="@+id/iv_log_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_app"
        custom:fixedAlong="width" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:padding="3dp" >

        <TextView
            android:id="@+id/tv_log_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>