<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_container_list"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="3dp" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/listview_item_dimension"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:padding="3dp" >

        <ImageView
            android:id="@+id/feed_item_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/container_id"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_app" />

        <ImageView
            android:id="@+id/feed_item_validator"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignRight="@+id/feed_item_picture"
            android:layout_alignTop="@+id/feed_item_picture"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:contentDescription="@string/container_id"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_btn_selection_checked"
            android:visibility="invisible" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/feed_item_descriptions"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:padding="3dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/container_id"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feed_item_container_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:textColor="@color/blue_light"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/container_owner"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feed_item_container_owner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:textColor="@color/blue_light"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/container_issues"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feed_item_container_issues"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:textColor="@color/blue_light"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/container_import_date"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feed_item_container_import_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:textColor="@color/blue_light"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>