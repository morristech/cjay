<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Theme.CJay" />

    <style name="AppTheme.NoTitleBar" parent="@style/Theme.CJay">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- <item name="android:fontFamily">sans-serif-light</item> -->
    <style name="FragmentTitle">
        <item name="android:padding">@dimen/spacing</item>
        <item name="android:textSize">@dimen/fragment_title_text_size</item>
    </style>

    <style name="StyledButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
    
    <style name="DamageReportLocationCodeEditText">
    	<item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
	    <item name="android:gravity">center</item>
	    <item name="android:textSize">40sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
	    <item name="android:background">@drawable/textview_location_background</item>
    </style>
    
    <style name="DamageReportLocationCodeButton">
    	<item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>
    
    <style name="DamageReportDamageCodeButton">
    	<item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="EmptyUploadStyle">
        <item name="android:drawablePadding">@dimen/spacing</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/double_spacing</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    
    <style name="NotFoundTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/blue_dark</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowColor">@color/item_bg_dark</item>
        <item name="android:text">@string/container_not_found</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="ListItemIssueLabel">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_weight">1.5</item>
	</style>
    
    <style name="ListItemIssueValue">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">right</item>
		<item name="android:textColor">@color/blue_light</item>
	</style>
</resources>