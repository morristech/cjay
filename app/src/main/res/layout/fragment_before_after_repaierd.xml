<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="9dp"
    android:weightSum="20">

    <LinearLayout
        android:layout_weight="7"
        android:paddingBottom="9dp"
        android:id="@+id/ll_top_repaired"
        android:layout_width="210dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CODE comp:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_code_comp_repaired"
                android:layout_alignParentRight="true"
                android:textColor="@color/background_cjay" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CODE vị trí:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_code_location_repaired"
                android:layout_alignParentRight="true"
                android:textColor="@color/background_cjay" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CODE hư hỏng:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_code_damaged_repaired"
                android:layout_alignParentRight="true"
                android:textColor="@color/background_cjay" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CODE sữa chữa:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_code_repair_repaired"
                android:layout_alignParentRight="true"
                android:textColor="@color/background_cjay" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kích thước:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_size_repaired"
                android:layout_alignParentRight="true"
                android:textColor="@color/background_cjay" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_number_repaired"
                android:layout_alignParentRight="true"
                android:textColor="@color/background_cjay" />
        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:paddingBottom="9dp"
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/lv_image_repaired"
        tools:listitem="@layout/item_gridview_photo_multi_select"
        android:layout_below="@+id/ll_top_repaired">

    </ListView>

    <LinearLayout
        android:id="@+id/btn_camera_repaired"
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:background="@drawable/btn_customize_selector"
        android:layout_alignParentBottom="true"
        android:minHeight="20dp">

        <TextView
            android:id="@+id/image_button_2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_take_new_audit_image"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginRight="12dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_camera" />
    </LinearLayout>

</LinearLayout>