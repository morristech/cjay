<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cloudjay.cjay.fragment.IssueRepairedFragment"
    android:padding="9dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_container_code"
        android:textSize="24dp"
        android:textStyle="bold"
        android:paddingBottom="3dp"
        android:text="ABCD1234567"
        android:textColor="@color/background_button_and_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_divider_line"
        android:textSize="24dp"
        android:textStyle="bold"
        android:paddingBottom="3dp"
        android:text=" - "
        android:textColor="@color/background_button_and_line"
        android:layout_toRightOf="@+id/tv_container_code" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_current_status"
        android:textSize="24dp"
        android:textStyle="bold"
        android:paddingBottom="3dp"
        android:text="B"
        android:textColor="@color/background_button_and_line"
        android:layout_toRightOf="@+id/tv_divider_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/background_button_and_line"
        android:layout_marginBottom="6dp"
        android:layout_below="@+id/tv_container_code"
        android:id="@+id/v_line" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_repaired_imgs"
        android:scrollbars="none"
        android:layout_below="@+id/v_line"
        tools:listitem="@layout/item_issue_repaired"></ListView>

</RelativeLayout>
